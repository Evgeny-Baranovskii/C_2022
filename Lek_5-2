#include <iostream>
using namespace std;

void Sort(int *a, int b)
{
   int c;
   for (int x = 0; x < b - 1; x++) 
{
   for (int y = 0; y < b - x - 1; y++) 
{
   if (a[y] < a [y + 1]) 
{
   c = a[y];
   a[y] = a[y + 1];
   a[y + 1] = c;
}
}
}
for (int x = 0; x < b; x++) 
{
   cout <<a[x] << " ";
}
}
int main()
{
   int z = 10;
   int a[z] = {2, 19, 8, 5, 22, 14, 9, 4, 8, 12};
   for (z = 0; z < 10; z++)
 {
 cout << a[z] << " ";
}
cout << endl;
Sort(a, z);

return 0;
}
